<% include ./partials/header.ejs  %>
  <div class="w-full h-screen lazyload bg-[url('https://images.unsplash.com/photo-1719937206158-cad5e6775044?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxmZWF0dXJlZC1waG90b3MtZmVlZHwxMXx8fGVufDB8fHx8fA%3D%3D')] bg-cover  flex items-center justify-center bg-center">
    <div class="w-[25vw]  bg-white px-10 py-10 rounded-[20px]">
      <h1 class="text-3xl font-bolder tracking-tighter capitalize text-center font-semibold text-zinc-800 leading-none">Welcome to pinterest</h1>

      <% if(error.length > 0){ %>
<p class="capitalize text-red-500 text-lg mt-2 text-center font-semibold"><%= error %></p>
     <% } %>
      <form action="/login" method="post">
        <input class="block border-2 rounded-lg  mt-2 w-full px-3 py-2" type="text" name="username" id="" placeholder="username">
        <input class="block border-2 rounded-lg  mt-2 w-full px-3 py-2" type="password" name="password" id="" placeholder="password">
        <a href="#" class="text-zinc-600 mt-2 inline-block font-semibold">Forgot password?</a>
        <input class="block border-2 rounded-lg text-center mt-2 w-full px-3 py-2 bg-red-600 text-white cursor-pointer rounded-full" type="submit" value="Login">
        <p class="mt-5 text-zinc-600 font-semibold text-md w-4/4 mx-auto  ">By continuing, you agree to Pinterest's 
          Terms of Service
           and acknowledge that you've read our 
          Privacy Policy.
         </p>
      </form>
      <a href="/register" class="inline-block w-full mt-7 text-center font-semibold text-zinc-800">Dont't have an Account ? Sign in</a>
    </div>
  </div>
<% include ./partials/footer.ejs  %>


