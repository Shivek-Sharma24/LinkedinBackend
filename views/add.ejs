<% include ./partials/header.ejs  %>

<div class="bg-zinc-700 text-white w-full min-h-screen">
<h1 class="px-7 py-5 capitalize text-xl">Create new post</h1>
<hr class="opacity-10 mt-3">
<form action="/createpost" method="post" enctype="multipart/form-data">
  <input class="text-zinc-800 block w-1/3 px-3 py-2" type="file" name="postimage">
  <input class="text-zinc-800 block w-1/3 px-3 py-2 border-2 rounded-md mx-2 mt-2" type="text" placeholder="Title" id="" name="title">
  <textarea class="text-zinc-800 block h-60 w-1/3 px-3 py-2 border-2 rounded-md mx-2 mt-2" type="text" name="description" id="" placeholder="Description" ></textarea>
  <input class="block w-1/3 px-3 py-2  rounded-md mx-2 mt-2 cursor-pointer bg-red-700" type="submit" value="Create Post" name="submit">
</form>
</div>


